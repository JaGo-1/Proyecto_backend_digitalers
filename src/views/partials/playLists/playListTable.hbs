<table class="playListTable">
  <thead>
    <tr>
      <th>N.</th>
      <th>Song</th>
      <th>Artist</th>
      <th>Album</th>
    </tr>
  </thead>
  <tbody>
    {{#each playListCollection}}
      <tr>
        <td class="item">{{@index}}</td>
        <td class="item">{{song}}</td>
        <td class="item">{{artist}}</td>
        <td class="item">{{album}}</td>
        {{#if ../isAdmin}}
          <td>
            <button class="update-button" data-id="{{_id}}">Update</button>
            <button class="delete-button" data-id="{{_id}}">Delete</button>
          </td>
        {{/if}}
      </tr>

    {{/each}}
  </tbody>
</table>